{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"strict": true,
		"jsx": "preserve",
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"baseUrl": "src",
		"paths": {
			"@lib/*": ["lib/*"],
			"@utils/*": ["utils/*"],
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@assets/*": ["assets/*"],
			"@pages/*": ["pages/*"]
		},
		"jsxImportSource": "solid-js"
	}
}
